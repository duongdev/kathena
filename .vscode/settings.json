{
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "editor.insertSpaces": true,
  "editor.tabSize": 2,
  "editor.trimAutoWhitespace": true,
  "editor.rulers": [80, 100, 120],
  "typescript.tsdk": "node_modules/typescript/lib",
  "cSpell.words": [
    "Helvetica",
    "Hocs",
    "JSBASIC",
    "Overridable",
    "Storyshots",
    "Stringifiable",
    "clsx",
    "codegen",
    "dropzone",
    "endregion",
    "fastify",
    "formik",
    "kmin",
    "mongod",
    "nestjs",
    "typegoose",
    "unmount",
    "virtuals"
  ],
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  }
}
